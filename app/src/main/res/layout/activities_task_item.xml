<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconType"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mytask"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Tasks"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iconType"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activityTaskProfilePicutre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/type"
            android:src="@drawable/gorilla"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/assignedByName"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textStyle="bold"
            android:text="Janette Doe"
            app:layout_constraintTop_toBottomOf="@id/type"
            app:layout_constraintLeft_toRightOf="@id/activityTaskProfilePicutre"/>
        <TextView
            android:id="@+id/assignedByDate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="May 21"
            app:layout_constraintTop_toBottomOf="@id/assignedByName"
            app:layout_constraintLeft_toRightOf="@id/activityTaskProfilePicutre"/>
        <TextView
            android:id="@+id/staticText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Janett Doe assigned a task to you"
            app:layout_constraintTop_toBottomOf="@id/assignedByDate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#102264F4"
            android:id="@+id/subTaskId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="3SS/3S-194"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staticText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#102264F4"
            android:id="@+id/subTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Set up company profile"
            android:textStyle="bold"
            style="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintTop_toBottomOf="@+id/subTaskId"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#102264F4"
            android:id="@+id/subTaskAssignedByAndDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Janett Doe 2:45 pm"
            app:layout_constraintTop_toBottomOf="@id/subTaskTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:paddingRight="5dp"
            android:background="#102264F4"
            android:id="@+id/subTaskAssigneStatic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Assigne:"
            app:layout_constraintTop_toBottomOf="@id/subTaskAssignedByAndDate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="#102264F4"
            android:id="@+id/subTaskAssignee"
            android:layout_marginLeft="87dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="James Doe"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/subTaskAssigneStatic"
            app:layout_constraintTop_toBottomOf="@id/subTaskAssignedByAndDate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/subTaskAssignee"
            android:background="#FFFFFF"/>








    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>